<launch>
    <arg name="display_plots" default="false"/>
    <arg name="gtest_filter" default="*"/>

    <rosparam>
        /march/joint_names: [joint1, joint2]
    </rosparam>

    <!-- Load RRbot model -->
    <param name="robot_description"
           command="$(find xacro)/xacro --inorder '$(find march_safety)/test/rrbot.xacro'" />

    <!-- Start RRbot -->
    <node name="rrbot"
          pkg="march_safety"
          type="rrbot"/>

    <!-- Load controller config -->
    <rosparam command="load" file="$(find march_safety)/test/rrbot_controllers.yaml" />

    <!-- Spawn controller -->
    <node name="controller_spawner"
          pkg="controller_manager" type="spawner" output="screen"
          args="march/controller/trajectory march/controller/joint_states" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
          output="screen" >
    </node>

    <node name="march_safety_node" pkg="march_safety" type="march_safety_node" output="screen">
        <rosparam>
            input_device_connection_timeout: 100
            send_errors_interval: 1000
            controller_name: "march/controller/trajectory"
        </rosparam>
    </node>

    <!-- Controller test -->
    <test test-name="march_safety_test"
          pkg="march_safety"
          type="march_safety-trajectory-test"/>
</launch>